{
  "name": "@nlxai/website",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "build": "npm run build:client && npm run build:static && npm run render-static",
    "build:client": "vite build --outDir dist/client",
    "build:static": "vite build --ssr src/static-renderer.tsx --outDir dist/static",
    "dev": "vite --force",
    "render-static": "tsx render-static.ts",
    "lint:check": "eslint src/ --ext .ts,.tsx,.js,.jsx,.mdx --max-warnings 0",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx,.mdx --fix",
    "tsc": "tsc",
    "caddy": "caddy run --config Caddyfile",
    "test": "npm run build && scripts/check-for-broken-links.sh"
  },
  "dependencies": {
    "@docsearch/css": "^3.6.0",
    "@docsearch/react": "^3.6.0",
    "@nlxai/chat-core": "*",
    "@nlxai/chat-react": "*",
    "@nlxai/chat-widget": "*",
    "@nlxai/voice-plus-core": "*",
    "@nlxai/voice-plus-web": "*",
    "@nlxai/touchpoint-ui": "*",
    "@react-hookz/web": "^23.1.0",
    "fuse.js": "^7.0.0",
    "htm": "^3.1.1",
    "ramda": "^0.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "react-router-dom": "^6.17.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "tinycolor2": "^1.4.1",
    "type-fest": "^4.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^22.10.1",
    "@types/ramda": "0.29.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.10",
    "@types/tinycolor2": "^1.4.2",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.18.20",
    "eslint-config-nlx": "*",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.7.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "xmlbuilder2": "^3.1.1"
  }
}
